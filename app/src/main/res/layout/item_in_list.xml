<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="#94DB93"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_list_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/mar1"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="181dp" />
    <ImageView
        android:id="@+id/item_list_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        app:srcCompat="@drawable/rating" />

    <TextView
        android:id="@+id/item_list_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_list_weigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:text="TextView" />

    <Button
        android:id="@+id/item_list_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:layout_gravity="center"
        android:text="Button" />

</LinearLayout>