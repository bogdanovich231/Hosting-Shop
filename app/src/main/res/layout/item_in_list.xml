<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="450dp"
    android:radius="16dp"
    android:paddingBottom="20dp"
    android:background="@drawable/rounded_background"
    android:layout_marginBottom="44dp"
    android:layout_marginLeft="25dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_list_image"
        android:layout_width="208dp"
        android:layout_height="210dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/image_background"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mar1"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="181dp" />

    <ImageView
        android:id="@+id/item_list_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        app:srcCompat="@drawable/rating"
        />

    <TextView
        android:id="@+id/item_list_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:textColor="#4D8B7C"
        android:textSize="17dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp"
        android:text="Text View"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp">

        <TextView
            android:id="@+id/item_list_weigh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Weight"
            android:textColor="#4D8B7C"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/item_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:text="Price"
            android:textColor="#4D8B7C"
            android:textSize="17dp" />
        <Button
            android:id="@+id/button_to_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_to_item"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:textColor="#4D8B7C"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:text="More..." />
    </LinearLayout>




</LinearLayout>