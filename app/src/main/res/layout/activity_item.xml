<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000A13"
    tools:context=".ItemActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/item_list_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/image_item_background"
        app:srcCompat="@drawable/mar1"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="181dp" />

    <ImageView
        android:id="@+id/item_list_rating"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="53dp"
        android:maxWidth="50dp"
        android:maxHeight="150dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        app:srcCompat="@drawable/rating2" />

    <TextView
        android:id="@+id/item_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ubuntu"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp"
        android:text="Text View"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp">

        <TextView
            android:id="@+id/item_list_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/ubuntu"
            android:text="TextView"
            android:textColor="#4D8B7C"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/item_list_weigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Weight"
            android:textColor="#4D8B7C"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/item_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:text="Price"
            android:textColor="#4D8B7C"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_list_decs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/ubuntu"
        android:paddingHorizontal="20dp"
        android:text="Text View"
        android:textColor="#A2BFB4"
        android:textSize="17sp" />
</LinearLayout>
</ScrollView>